<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp1.Views.StopwatchPage"
             xmlns:vm="clr-namespace:TestApp1.ViewModels"
             Title="Stopwatch">

    <!--<ContentPage.BindingContext>
        <vm:StopwatchModel />
    </ContentPage.BindingContext>-->

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label x:Name="stopwatchLabel"
                    Text="00:00:00"
                    FontSize="40"
                    HorizontalTextAlignment="Center"
                    HorizontalOptions="FillAndExpand" />

            <Button x:Name="startButton" Text="Start" Clicked="OnStart" />
            <Button x:Name="stopButton" Text="Stop" Clicked="OnStop" />
            <Button x:Name="resetButton" Text="Reset" Clicked="OnReset" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>